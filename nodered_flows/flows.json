    {
        "id": "ac868a10142081ad",
        "type": "function",
        "z": "c2bee6c445d2b842",
        "name": "control_watering_now",
        "func": "// KHỞI TẠO BIẾN\nvar mode = flow.get(\"mode\") || \"manual\"; \nvar soilLimit = Number(flow.get(\"soilLimit\")) || 30;\nvar humLimit  = Number(flow.get(\"humLimit\")) || 40;\nvar tempLimit = Number(flow.get(\"tempLimit\")) || 35;\nvar isPumping = flow.get(\"isPumping\") || false;\nvar mqttTopic = \"irrigation/control\"; \n\nvar manualState = flow.get(\"manualState\") || \"OFF\";\nvar lastSensors = flow.get(\"lastSensors\") || null;\nfunction getAutoDecision(s) {\n    if (!s) return \"OFF\"; \n    var curSoil = Number(s.soil);\n    var curHum  = Number(s.hum);\n    var curTemp = Number(s.temp);\n    \n    var needWater = (curSoil < soilLimit);\n    if (curHum < humLimit && curSoil < (soilLimit + 10)) needWater = true;\n    if (curTemp > tempLimit) return \"OFF\";\n\n    if (needWater) return \"ON\";\n    if (!needWater && curSoil > (soilLimit + 5)) return \"OFF\";\n    return \"KEEP\"; \n}\n\n// XỬ LÝ KHI WEB VỪA MỞ \nif (msg.topic === \"get_settings\") {\n    var currentSettings = {\n        soilLimit: soilLimit,\n        humLimit: humLimit,\n        tempLimit: tempLimit,\n        mode: mode\n    };\n    // Gửi về Web qua Cổng 2\n    return [null, { topic: \"current_settings\", payload: currentSettings }];\n}\nif (msg.topic === \"cmd_settings\") {\n    if (msg.payload.soilLimit !== undefined) flow.set(\"soilLimit\", Number(msg.payload.soilLimit));\n    if (msg.payload.humLimit !== undefined) flow.set(\"humLimit\", Number(msg.payload.humLimit));\n    if (msg.payload.tempLimit !== undefined) flow.set(\"tempLimit\", Number(msg.payload.tempLimit));\n    \n    // Hiện thông báo Debug\n    node.warn(`>>> ĐÃ LƯU SETTINGS: Soil ${msg.payload.soilLimit}% | Hum ${msg.payload.humLimit}% | Temp ${msg.payload.tempLimit}°C`);\n    \n    // Gửi xác nhận về Web \n    return [null, { topic: \"settings_saved\", payload: \"OK\" }];\n}\n\n// XỬ LÝ CHUYỂN CHẾ ĐỘ\nif (msg.topic === \"cmd_mode\") {\n    mode = msg.payload;\n    flow.set(\"mode\", mode);\n    var cmdToSend = \"OFF\";\n\n    if (mode === \"manual\") {\n        cmdToSend = flow.get(\"manualState\") || \"OFF\";\n        node.warn(`>> Chuyển Manual -> Khôi phục: ${cmdToSend}`);\n    } else {\n        var s = flow.get(\"lastSensors\");\n        if (s) {\n            var decision = getAutoDecision(s);\n            cmdToSend = (decision === \"KEEP\") ? (isPumping ? \"ON\" : \"OFF\") : decision;\n            node.warn(`>> Chuyển Auto -> Tính toán lại: ${cmdToSend}`);\n        } else {\n            cmdToSend = \"OFF\";\n        }\n    }\n    flow.set(\"isPumping\", (cmdToSend === \"ON\"));\n    return [{ topic: mqttTopic, payload: cmdToSend }, null];\n}\n\n// XỬ LÝ MANUAL\nif (msg.cmd === \"PUMP_ON\" || msg.cmd === \"PUMP_OFF\") {\n    var cmd = (msg.cmd === \"PUMP_ON\") ? \"ON\" : \"OFF\";\n    flow.set(\"manualState\", cmd); \n    if (mode === \"manual\") {\n        flow.set(\"isPumping\", (cmd === \"ON\"));\n        node.warn(\"MANUAL CLICK: \" + cmd);\n        return [{ topic: mqttTopic, payload: cmd }, null];\n    }\n    return null;\n}\n\n// XỬ LÝ AUTO SENSOR \nif (msg.payload && msg.payload.type === \"sensors\") {\n    var s = msg.payload.data;\n    flow.set(\"lastSensors\", s);\n    if (mode === \"manual\") return null;\n\n    var decision = getAutoDecision(s);\n    if (decision === \"ON\" && !isPumping) {\n        flow.set(\"isPumping\", true);\n        node.warn(\"AUTO: BẬT BƠM\");\n        return [{ topic: mqttTopic, payload: \"ON\" }, null];\n    }\n    if (decision === \"OFF\" && isPumping) {\n        flow.set(\"isPumping\", false);\n        node.warn(\"AUTO: TẮT BƠM\");\n        return [{ topic: mqttTopic, payload: \"OFF\" }, null];\n    }\n}\nreturn null;",
