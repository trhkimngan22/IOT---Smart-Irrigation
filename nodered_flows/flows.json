    {
        "id": "9d3d387151532922",
        "type": "function",
        "z": "c2bee6c445d2b842",
        "name": "Get data from MongoDB",
        "func": "// Lấy dữ liệu từ MongoDB\nvar dbData = msg.payload;\nif (!dbData || !Array.isArray(dbData) || dbData.length === 0) {\n    node.warn(\"Chưa có dữ liệu từ Database hoặc định dạng sai!\");\n    return null;\n}\ndbData.sort(function (a, b) {\n    var dateA = new Date(a.timestamp || a.date);\n    var dateB = new Date(b.timestamp || b.date);\n    return dateA - dateB;\n});\n\nvar limitChart = 20; // Lấy 20 điểm\nvar recentData = dbData.slice(-limitChart);\n\nvar chartLabels = [];\nvar chartTemp = [];\nvar chartHum = [];\n\nrecentData.forEach(function (d) {\n    if (!d) return;\n    var dateVal = d.timestamp ? new Date(d.timestamp) : new Date();\n    var timeStr = dateVal.toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' });\n    var valTemp = d.temp || d.temperature || d.Temp || 0;\n    var valHum = d.hum || d.humidity || d.Hum || 0;\n\n    chartLabels.push(timeStr);\n    chartTemp.push(Number(valTemp)); \n    chartHum.push(Number(valHum));\n});\n\n// XỬ LÝ WATER LEVEL\nvar lastRecord = dbData[dbData.length - 1];\nvar rawWater = lastRecord ? (lastRecord.water || lastRecord.waterLevel || 0) : 0;\nvar maxTankCapacity = 500; \nvar percentLevel = Math.round((Math.abs(Number(rawWater)) / maxTankCapacity) * 100);\nif (percentLevel > 100) percentLevel = 100;\nif (percentLevel < 0) percentLevel = 0;\n\n// XỬ LÝ SOIL\nvar totalSoil = 0;\nvar count = 0;\nrecentData.forEach(function (d) {\n    // Kiểm tra tên biến soil hoặc moisture\n    var valSoil = d.soil || d.moisture || d.soilMoisture;\n    if (valSoil !== undefined) {\n        totalSoil += Number(valSoil);\n        count++;\n    }\n});\nvar avgSoil = count > 0 ? Math.round(totalSoil / count) : 0;\nmsg.payload = {\n    chart: {\n        labels: chartLabels,\n        temp: chartTemp,\n        hum: chartHum\n    },\n    water: percentLevel,\n    soil: avgSoil\n};\n\nreturn msg;",
